{% extends "@calendar-core/events_layout.html.twig" %}

{% block shoulder %}
	{{ 'Liste des calendriers su système' }}
{% endblock shoulder %}

{% block title %}
	<i class="fas mr-2 link--icon fa-clipboard-question"></i>
	Liste des calendriers su système
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block main %}
    <div class="col-12 row tab_calendar">
        <div class="col-12 row mx-0 px-0 tab_header">
            <div class="col-4 px-0 mx-0 text-center">Nom</div>
            <div class="col-2 mx-0 px-0 text-center">Type</div>
            <div class="col-4 mx-0 px-0 text-center">Propriétaire</div>
            <div class="col-2 mx-0 px-0 text-center">Actions</div>
        </div>
        <div class="col-12 row mx-0 px-0 tab_body">
    {% for calendar in calendars %}
        <div class="col-12 row mx-0 px-0 tab_line">
            <div class="col-4 px-0 mx-0 text-center">{{ calendar.name }}</div>
            <div class="col-2 mx-0 px-0 text-center">{{ calendar.type.name }}</div>
            <div class="col-4 mx-0 px-0 text-center">{{ calendar.owner.fullname }}</div>
            <div class="col-2 mx-0 px-0 text-center"></div>
        </div>
    {% else %}
        <div class="col-12 mx-0 px-0 text-center">Aucun calendrier défini</div>    
    {% endfor %}
        </div>
    </div>
{% endblock %} 

{% block javascripts %}
    {{ parent() }}
{% endblock %} 
